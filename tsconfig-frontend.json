{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ESNext",
        "allowJs": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "rootDirs": [
            "src",
            "stories",
            ".storybook"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false, // this fixes the issue with the `any` type from third party libraries
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
