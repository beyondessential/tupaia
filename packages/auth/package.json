{
  "name": "@tupaia/auth",
  "version": "1.0.0",
  "private": true,
  "description": "Back-end authentication used internally by web-config-server and meditrak-server to authenticate a user's credentials against the database, and build their access policy.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/auth"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
   "build": "rm -rf dist && run-p \"build:* {@}\" --",
    "build:src": "babel src --out-dir dist --source-maps --ignore \"src/__tests__/**\" --config-file \"../../babel.config.json\"",
    "build:types": "tsc",
    "lint": "eslint --ignore-path ../../.gitignore .",
    "lint:fix": "yarn lint --fix",
    "test": "jest --runInBand",
    "test:coverage": "yarn test --coverage"
  },
  "dependencies": {
    "@tupaia/utils": "1.0.0",
    "rand-token": "^1.0.1",
    "semver-compare": "^1.0.0",
    "sha256": "^0.2.0",
    "jsonwebtoken": "^7.4.3",
    "randomatic": "^3.1.1"
  },
  "devDependencies": {
    "@beyondessential/tupaia-access-policy": "^2.5.1",
    "@tupaia/access-policy": "3.0.0",
    "@tupaia/database": "1.0.0"
  }
}
