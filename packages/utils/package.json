{
  "name": "@tupaia/utils",
  "version": "1.0.0",
  "private": true,
  "description": "Utility functions that are helpful across multiple packages",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/utils"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --source-maps --ignore 'src/__tests__/**' --config-file '../../babel.config.json'",
    "build:ts": "tsc",
    "lint": "eslint --ignore-path ../../.gitignore .",
    "lint:fix": "yarn lint --fix .",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "eslintConfig": {
    "extends": "@beyondessential/jest",
    "overrides": [
      {
        "files": "**/src/testUtilities/**",
        "env": {
          "jest": true
        }
      }
    ]
  },
  "dependencies": {
    "case": "^1.5.5",
    "countrynames": "^0.1.1",
    "lodash.get": "^4.4.2",
    "lodash.pickby": "^4.6.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "node-fetch": "^1.7.3",
    "validator": "^8.2.0",
    "winston": "^3.3.3",
    "xlsx": "^0.10.9"
  }
}
