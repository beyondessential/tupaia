{
  "name": "@tupaia/utils",
  "version": "1.0.0",
  "private": true,
  "description": "Utility functions that are helpful across multiple packages",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/utils"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && run-p \"build:* {@}\" --",
    "build:src": "babel src --out-dir dist --source-maps --ignore \"src/__tests__/**\" --config-file \"../../babel.config.json\"",
    "build:types": "tsc",
    "lint": "eslint --ignore-path ../../.gitignore .",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "dependencies": {
    "case": "^1.5.5",
    "countrynames": "^0.1.1",
    "fast-memoize": "^2.5.2",
    "jsonwebtoken": "^8.5.1",
    "lodash.get": "^4.4.2",
    "lodash.pickby": "^4.6.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "node-fetch": "^1.7.3",
    "numeral": "^2.0.6",
    "validator": "^8.2.0",
    "winston": "^3.3.3",
    "xlsx": "^0.10.9",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "eslint": "^7.9.0",
    "jest": "^27.0.6",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.2.0"
  }
}
