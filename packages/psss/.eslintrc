{
  "extends": ["@beyondessential/jest"],
  "env": {
    "browser": true
  },
  "rules": {
    "jsx-a11y/href-no-hash": "off"
  },
  "settings": {
    "import/resolver": {
      "alias": [
        ["test-utils", "./src/utils/test-utils.js"],
        ["utils", "./src/utils"]
      ]
    }
  },
  "overrides": [
    {
      "files": ["src/api/FakeApi.js", "./src/utils/test-utils.js"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "devDependencies": true,
            "packageDir": ["../../", "."]
          }
        ]
      }
    }
  ]
}
