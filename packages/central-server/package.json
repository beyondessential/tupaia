{
  "name": "@tupaia/central-server",
  "version": "1.0.0",
  "private": true,
  "description": "Central server for handling all miscellaneous Tupaia/Meditrak behaviour",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/central-server"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://bes.au)",
  "main": "handler.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && run-p -c \"build:* {@}\" --",
    "build:src": "yarn package:build:js",
    "build:types": "yarn run package:build:types",
    "build-dev": "yarn run build",
    "lint": "yarn package:lint",
    "lint:fix": "yarn lint --fix",
    "scheduled-task": "babel-node ./scripts/scheduledTask.js --config-file '../../babel.config.json'",
    "start": "node dist",
    "start-dev": "yarn package:start:backend-start-dev 9999 -i",
    "start-verbose": "LOG_LEVEL=debug yarn start-dev",
    "setup-test": "yarn workspace @tupaia/database setup-test-database",
    "test": "yarn workspace @tupaia/database check-test-database-exists && NODE_ENV=test mocha",
    "test:coverage": "cross-env NODE_ENV=test nyc mocha",
    "create-meditrak-sync-view": "node dist/createMeditrakSyncView.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@tupaia/access-policy": "workspace:*",
    "@tupaia/auth": "workspace:*",
    "@tupaia/data-broker": "workspace:*",
    "@tupaia/database": "workspace:*",
    "@tupaia/dhis-api": "workspace:*",
    "@tupaia/expression-parser": "workspace:*",
    "@tupaia/server-boilerplate": "workspace:*",
    "@tupaia/server-utils": "workspace:*",
    "@tupaia/tsutils": "workspace:*",
    "@tupaia/types": "workspace:*",
    "@tupaia/utils": "workspace:*",
    "adm-zip": "^0.5.5",
    "api-error-handler": "^1.0.0",
    "body-parser": "^1.18.3",
    "case": "^1.6.3",
    "compare-versions": "^6.1.0",
    "cors": "^2.8.5",
    "countries-and-timezones": "^3.6.0",
    "express": "^4.19.2",
    "format-link-header": "^2.1.0",
    "lodash.chunk": "^4.2.0",
    "lodash.groupby": "^4.6.0",
    "lodash.keyby": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "lodash.pick": "^4.4.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.45",
    "morgan": "^1.9.0",
    "multer": "^2.0.1",
    "node-schedule": "^2.1.1",
    "public-ip": "4.0.4",
    "rate-limiter-flexible": "^5.0.3",
    "react-autobind": "^1.0.6",
    "string-similarity": "^1.2.2",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/node": "^7.10.5",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "cross-env": "^7.0.2",
    "deep-equal-in-any-order": "^1.0.21",
    "lodash": "^4.17.4",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^6.0.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.3.0",
    "sinon-test": "^3.0.0",
    "supertest": "^3.1.0"
  }
}
