{
  "name": "@tupaia/dhis-api",
  "version": "1.0.0",
  "private": true,
  "description": "Abstraction layer over the DHIS2 api",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/dhis-api"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
   "build": "rm -rf dist && run-p build:src build:types",
    "build:src": "babel src --out-dir dist --source-maps --ignore \"src/__tests__/**\" --config-file \"../../babel.config.json\"",
    "build:types": "tsc",
    "build:dev": "yarn build",
    "build:dev:watch": "run-p \"build:src --watch\" \"build:types --watch\"",
    "lint": "eslint --ignore-path ../../.gitignore .",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@tupaia/aggregator": "1.0.0",
    "@tupaia/utils": "1.0.0",
    "chai-as-promised": "^7.1.1",
    "lodash.groupby": "^4.6.0",
    "lodash.keyby": "^4.6.0",
    "moment": "^2.22.2",
    "simple-oauth2": "^1.5.0",
    "urlencode": "^1.1.0",
    "winston": "^3.3.3"
  }
}
