{
  "name": "@tupaia/database",
  "version": "1.0.0",
  "private": true,
  "description": "Common database code for use across other packages within this mono-repo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/database"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && run-p \"build:* {@}\" --",
    "build:src": "npm run --prefix ../../ package:build:js",
    "build:types": "npm run --prefix ../../ package:build:types",
    "build-dev": "npm run build",
    "dump-database": "./scripts/dumpDatabase.sh",
    "lint": "yarn package:lint:js",
    "lint:fix": "yarn lint --fix",
    "migrate": "babel-node ./src/migrate.js up --migrations-dir ./src/migrations -v --config-file \"../../babel.config.json\"",
    "migrate-create": "scripts/migrateCreate.sh",
    "migrate-down": "babel-node ./src/migrate.js  down --migrations-dir ./src/migrations -v --config-file \"../../babel.config.json\"",
    "refresh-database": "node ./scripts/refreshDatabase.js",
    "test": "yarn package:test:withdb  --runInBand",
    "test:coverage": "yarn test --coverage",
    "update-test-data": "bash -c 'source .env && pg_dump -s -U $DB_USER -O $DB_NAME > src/__tests__/testData/testDataDump.sql && pg_dump -t migrations -c -U $DB_USER -O $DB_NAME >> src/__tests__/testData/testDataDump.sql'",
    "setup-test-database": "DB_NAME=tupaia_test scripts/setupTestDatabase.sh",
    "check-test-database-exists": "DB_NAME=tupaia_test scripts/checkTestDatabaseExists.sh"
  },
  "dependencies": {
    "@tupaia/auth": "1.0.0",
    "@tupaia/tsutils": "1.0.0",
    "@tupaia/utils": "1.0.0",
    "db-migrate": "^0.11.5",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^8.2.0",
    "knex": "0.14.6",
    "lodash.clonedeep": "^4.5.0",
    "lodash.groupby": "^4.6.0",
    "lodash.keyby": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "moment": "^2.24.0",
    "os": "0.1.1",
    "pg": "8.5.1",
    "pg-pubsub": "0.6.1",
    "rand-token": "^1.0.1",
    "react-autobind": "1.0.6",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@babel/node": "^7.10.5",
    "cross-env": "^7.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "pluralize": "^8.0.0"
  }
}
