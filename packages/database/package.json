{
  "name": "@tupaia/database",
  "version": "1.0.0",
  "private": true,
  "description": "Common database code for use across other packages within this monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git",
    "directory": "packages/database"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://bes.au)",
  "exports": {
    ".": {
      "node": "./dist/server/index.js",
      "browser": "./dist/browser/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && run-p \"build:* {@}\" --",
    "build:src": "yarn run package:build:js",
    "build:types": "yarn run package:build:types",
    "build-dev": "yarn run build",
    "build-watch": "rimraf dist && yarn run build:types && yarn run package:build:js-watch",
    "dump-database": "./scripts/dumpDatabase.sh",
    "lint": "yarn package:lint",
    "lint:fix": "yarn lint --fix",
    "migrate": "babel-node ./src/server/migrate.js up -v --config-file ../../babel.config.json",
    "migrate-create": "scripts/migrateCreate.sh",
    "migrate-down": "babel-node ./src/server/migrate.js  down -v --config-file ../../babel.config.json",
    "refresh-database": "node ./scripts/refreshDatabase.js",
    "setup-test": "yarn setup-test-database",
    "test": "yarn package:test:withdb",
    "test:coverage": "yarn test --coverage",
    "update-schema": "./scripts/updateSchema.sh",
    "setup-test-database": "DB_NAME=tupaia_test ./scripts/setupNewDatabase.sh OK",
    "check-test-database-exists": "DB_NAME=tupaia_test scripts/checkTestDatabaseExists.sh",
    "setup-new-database": "./scripts/setupNewDatabase.sh"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@tupaia/access-policy": "workspace:*",
    "@tupaia/auth": "workspace:*",
    "@tupaia/constants": "workspace:*",
    "@tupaia/expression-parser": "workspace:*",
    "@tupaia/server-utils": "workspace:*",
    "@tupaia/tsutils": "workspace:*",
    "@tupaia/types": "workspace:*",
    "@tupaia/utils": "workspace:*",
    "bson-objectid": "^2.0.4",
    "case": "^1.6.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "db-migrate": "^0.11.5",
    "db-migrate-pg": "^1.2.2",
    "dotenv": "^16.4.5",
    "es-toolkit": "^1.39.10",
    "knex": "^3.1.0",
    "lodash": "^4.17.4",
    "lodash.groupby": "^4.6.0",
    "lodash.keyby": "^4.6.0",
    "lodash.orderby": "^4.6.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.45",
    "os": "0.1.1",
    "pg": "8.5.1",
    "pg-pubsub": "^0.8.1",
    "rand-token": "^1.0.1",
    "react-autobind": "1.0.6",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.27.5",
    "@babel/node": "^7.10.5",
    "@tupaia/expression-parser": "workspace:*",
    "npm-run-all": "^4.1.5",
    "pluralize": "^8.0.0",
    "rimraf": "^6.0.1"
  }
}
