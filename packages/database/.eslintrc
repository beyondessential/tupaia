{
  "extends": ["@beyondessential/eslint-config-beyondessential", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "mocha": true
  },
  "rules": {
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["src/tests/**"] }]
  },
  "overrides": [
    {
      "files": "src/tests/**",
      "rules": {
        "func-names": "off",
        "no-unused-expressions": "off"
      }
    },
    {
      "files": "src/migrations/**",
      "rules": {
        "func-names": "off",
        "no-underscore-dangle": "off",
        "no-var": "off",
        "strict": "off",
        "no-unused-vars": "off"
      }
    }
  ]
}
