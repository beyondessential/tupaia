{
  "extends": "../../tsconfig-ts.json",
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__",
    "src/stories/**/*"
  ]
}