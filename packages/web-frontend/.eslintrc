{
  "env": {
    "browser": true
  },
  "rules": {
    "react/jsx-boolean-value": ["error", "never"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-wrap-multilines": ["error", { "prop": "ignore" }],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["config/**", "**/test.js", "**/scripts/**"]
      }
    ],
    // no-did-update-set-state is not needed as per: https://github.com/airbnb/javascript/issues/1875
    "react/no-did-update-set-state": 0
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "env": {
        "jest": true
      },
      "plugins": ["jest"]
    }
  ]
}
