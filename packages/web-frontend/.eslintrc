{
  "env": {
    "browser": true
  },
  "rules": {
    // no-did-update-set-state is not needed as per: https://github.com/airbnb/javascript/issues/1875
    "react/no-did-update-set-state": 0
  },
  "overrides": [
    {
      "files": ["**/*.test.js"],
      "plugins": ["jest"],
      "env": {
        "jest": true
      }
    },
    {
      "files": ["cypress/**"],
      "plugins": ["cypress"],
      "env": {
        "browser": true,
        "cypress/globals": true
      }
    }
  ]
}
