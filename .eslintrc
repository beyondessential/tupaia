{
  "extends": "@beyondessential/js",
  "parser": "babel-eslint",
  "rules": {
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": ["**/tests/**", "**/__tests__/**", "**/stories/**"],
        "packageDir": ["../../", "."]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "^@tupaia/access-policy$",
          "^@tupaia/aggregator$",
          "^@tupaia/auth$",
          "^@tupaia/data-api$",
          "^@tupaia/data-broker$",
          "^@tupaia/database$",
          "^@tupaia/dhis-api$",
          "^@tupaia/utils$"
        ]
      }
    ],
    "jsx-a11y/href-no-hash": "off"
  },
  "overrides": [
    {
      "files": ["**/src/migrations/**", "**/src/database/migrations/**"],
      "rules": {
        "func-names": "off",
        "no-underscore-dangle": "off",
        "no-var": "off",
        "strict": "off",
        "no-unused-vars": "off"
      }
    },
    {
      "files": "**/src/tests/**",
      "env": {
        "mocha": true
      },
      "rules": {
        "func-names": "off",
        "no-unused-expressions": "off"
      }
    }
  ]
}
