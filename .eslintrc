{
  "extends": "@beyondessential/js",
  "parser": "babel-eslint",
  "rules": {
    "global-require": "off",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "jest.setup.js",
          "**/cypress/**",
          "**/migrations/**",
          "**/stories/**",
          "**/tests/**",
          "**/__tests__/**"
        ],
        "packageDir": ["../../", "."]
      }
    ],
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "^@tupaia/access-policy$",
          "^@tupaia/aggregator$",
          "^@tupaia/auth$",
          "^@tupaia/data-api$",
          "^@tupaia/data-broker$",
          "^@tupaia/database$",
          "^@tupaia/dhis-api$",
          "^@tupaia/utils$"
        ]
      }
    ],
    "jsx-a11y/href-no-hash": "off"
  },
  "overrides": [
    {
      "files": "packages/database/src/migrations/**",
      "rules": {
        "func-names": "off",
        "no-underscore-dangle": "off",
        "no-unused-vars": "off",
        "no-var": "off",
        "strict": "off",
        "prettier/prettier": "off"
      }
    },
    {
      "files": ["jestScaffolding.js", "scripts/**"],
      "rules": {
        "import/no-extraneous-dependencies": ["error", { "packageDir": ["."] }]
      }
    },
    {
      "files": "**/__tests__",
      "rules": {
        "jest/valid-expect": ["error", { "maxArgs": 2 }]
      }
    },
    {
      "files": "**/tests/**",
      "env": {
        "mocha": true
      },
      "rules": {
        "func-names": "off",
        "no-unused-expressions": "off"
      }
    },
    {
      "files": ["**/webpack.config.js", "**/webpack.config*[!babel].js"],
      "rules": {
        "prefer-object-spread": "off"
      }
    }
  ]
}
