{
  "private": true,
  "name": "tupaia",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@tupaia/meditrak-app/**"
    ]
  },
  "scripts": {
    "postinstall": "yarn build-internal-dependencies",
    "update-codeship-env-vars": "./packages/devops/scripts/ci/updateCiEnvVars.sh",
    "update-parameter-store-env-vars": "./packages/devops/scripts/utility/updateParameterStoreEnvVars.sh",
    "build-admin-panel": "yarn workspace @tupaia/admin-panel build",
    "build-web-frontend": "yarn workspace @tupaia/web-frontend build",
    "build-internal-dependencies": "./packages/devops/scripts/ci/buildInternalDependencies.sh",
    "migrate": "yarn workspace @tupaia/database migrate",
    "migrate-create": "yarn workspace @tupaia/database migrate-create",
    "migrate-down": "yarn workspace @tupaia/database migrate-down",
    "dump-database": "./packages/devops/scripts/utility/dumpDb.sh",
    "refresh-database": "./packages/devops/scripts/utility/refreshDb.sh"
  }
}
