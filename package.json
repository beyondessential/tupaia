{
  "name": "tupaia",
  "private": true,
  "description": "Mono-repo for the Tupaia project, mapping health data across the Pacific",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia.git"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/beyondessential/tupaia-backlog/issues"
  },
  "homepage": "https://github.com/beyondessential/tupaia",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "test -n \"$SKIP_BUILD_INTERNAL_DEPENDENCIES\" || yarn build-internal-dependencies",
    "update-codeship-env-vars": "./packages/devops/scripts/ci/updateCiEnvVars.sh",
    "update-parameter-store-env-vars": "./scripts/bash/updateParameterStoreEnvVars.sh",
    "build-admin-panel": "yarn workspace @tupaia/admin-panel build",
    "build-web-frontend": "yarn workspace @tupaia/web-frontend build",
    "build-internal-dependencies": "./scripts/bash/buildInternalDependencies.sh",
    "build-internal-dependencies:dev": "./scripts/bash/buildInternalDependencies.sh --withTypes",
    "migrate": "yarn workspace @tupaia/database migrate",
    "migrate-create": "yarn workspace @tupaia/database migrate-create",
    "migrate-down": "yarn workspace @tupaia/database migrate-down",
    "dump-database": "./scripts/bash/dumpDb.sh",
    "refresh-database": "./scripts/bash/refreshDb.sh",
    "test-all": "node ./scripts/node/testAll --silent"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/polyfill": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.1",
    "@babel/register": "^7.11.5",
    "@babel/runtime-corejs3": "^7.11.2",
    "@beyondessential/eslint-config-jest": "^0.1.2",
    "@beyondessential/eslint-config-js": "^0.1.4",
    "@beyondessential/eslint-config-ts": "^0.1.0",
    "@storybook/addon-essentials": "^6.0.10",
    "@storybook/react": "^6.0.10",
    "@testing-library/cypress": "^7.0.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.0.11",
    "@tupaia/utils": "1.0.0",
    "@types/express": "^4.17.8",
    "@types/hjson": "^2.4.2",
    "@types/lodash.groupby": "^4.6.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-preset-react-app": "^9.1.2",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "cypress": "^4.12.0",
    "eslint": "^7.8.1",
    "eslint-plugin-cypress": "^2.11.1",
    "jest": "^26.1.0",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-extended": "^0.11.5",
    "mocha": "^8.1.3",
    "mockdate": "^3.0.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "react-scripts": "3.4.1",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "start-server-and-test": "^1.11.0",
    "supertest": "^3.1.0",
    "typescript": "^3.9.3",
    "winston": "^3.3.3"
  },
  "engines": {
    "node": "^12.18.3"
  }
}
